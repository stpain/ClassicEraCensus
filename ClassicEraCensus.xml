<Ui>
    
    <Frame name="ClassicEraCensusHyperlinkPopup" mixin="ClassicEraCensusHyperlinkPopupMixin" inherits="TooltipBorderedFrameTemplate" parent="UIParent" hidden="true">
        <Size x="200" y="350"/>

        <Anchors>
            <Anchor point="LEFT" x="200" y="0"/>
        </Anchors>

        <Frames>
            <Button parentKey="close" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-2" y="-2"/>
                </Anchors>
            </Button>
        </Frames>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="header" inherits="GameFontNormal" text="Guild">
                    <Color r="1" g="1" b="1" a="1"/>
                    <Size x="280" y="26"/>
                    <Anchors>
                        <Anchor point="TOP" x="-2" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

    <Frame name="ClassicEraCensusUI" mixin="ClassicEraCensusMixin" inherits="PortraitFrameTemplate" parent="UIParent" enableMouse="true" movable="true">

        <Size x="940" y="420"/>

        <Anchors>
            <Anchor point="CENTER" x="0" y="0"/>
        </Anchors>
        
        <Frames>

            <Button parentKey="help">
                <Size x="18" y="18"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-26" y="-2"/>
                </Anchors>
                <NormalTexture atlas="glueannouncementpopup-icon-info"/>
            </Button>

            <Button parentKey="startScan" inherits="UIPanelButtonTemplate" text="Start Census">
                <Size x="100" y="18"/>
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.help" relativePoint="LEFT" x="-2" y="0"/>
                </Anchors>
            </Button>

